<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_start"
        android:layout_width="@dimen/global_dimen_6"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_dimen"
        android:layout_alignParentTop="true"

        android:gravity="center"
        android:autofillHints="@string/list_span_start"
        android:hint="@string/list_span_start"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_is_reversed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_start"
        android:layout_margin="@dimen/global_dimen"
        android:text="@string/list_span_reverse" />

</RelativeLayout>