<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_pickup_from_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:text="@string/image_span_media" />

        <Button
            android:id="@+id/btn_pickup_from_recorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignBaseline="@+id/btn_pickup_from_media"
            android:layout_toRightOf="@+id/btn_pickup_from_media"
            android:layout_toEndOf="@+id/btn_pickup_from_media"
            android:visibility="gone"
            android:text="@string/image_span_recorder" />

        <EditText
            android:id="@+id/et_uri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_pickup_from_media"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:enabled="true"
            android:maxLines="1"
            android:inputType="textWebEmailAddress|textUri" />

        <Button
            android:id="@+id/btn_pickup_from_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/et_uri"
            android:text="@string/image_span_gallery" />

        <Button
            android:id="@+id/btn_pickup_from_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignBaseline="@+id/btn_pickup_from_gallery"
            android:layout_toRightOf="@+id/btn_pickup_from_gallery"
            android:layout_toEndOf="@+id/btn_pickup_from_gallery"
            android:text="@string/image_span_camera" />

        <EditText
            android:id="@+id/et_src"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_pickup_from_camera"
            android:layout_margin="8dp"
            android:maxLines="1"
            android:inputType="textWebEmailAddress|textUri" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/et_src"
            android:adjustViewBounds="true" />
<!--        android:adjustViewBounds="true"：ImageView宽度顶边显示，高度保持比例-->
<!--        https://www.jb51.net/article/134276.htm-->

        <TextView
            android:id="@+id/tv_display_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/iv_preview"
            android:textAllCaps="false"
            android:text="@string/image_span_display_width" />

        <EditText
            android:id="@+id/et_display_width"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignBaseline="@+id/tv_display_width"
            android:layout_toRightOf="@+id/tv_display_width"
            android:layout_toEndOf="@+id/tv_display_width"
            android:maxLines="1"
            android:inputType="numberSigned" />

        <TextView
            android:id="@+id/tv_display_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/iv_preview"
            android:layout_toRightOf="@+id/et_display_width"
            android:layout_toEndOf="@+id/et_display_width"
            android:textAllCaps="false"
            android:text="@string/image_span_display_height" />

        <EditText
            android:id="@+id/et_display_height"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignBaseline="@+id/tv_display_height"
            android:layout_toRightOf="@+id/tv_display_height"
            android:layout_toEndOf="@+id/tv_display_height"
            android:maxLines="1"
            android:inputType="numberSigned" />

        <CheckBox
            android:id="@+id/cb_display_constrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/tv_display_height"
            android:checked="false"
            android:text="@string/image_span_constrain"/>

        <Button
            android:id="@+id/btn_display_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignBaseline="@+id/cb_display_constrain"
            android:layout_toRightOf="@+id/cb_display_constrain"
            android:layout_toEndOf="@+id/cb_display_constrain"
            android:padding="0dp"
            android:textSize="12sp"
            android:text="1 : 1" />

        <Button
            android:id="@+id/btn_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@id/cb_display_constrain"
            android:text="@string/image_span_crop" />

        <Button
            android:id="@+id/btn_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignBaseline="@+id/btn_crop"
            android:layout_toRightOf="@+id/btn_crop"
            android:layout_toEndOf="@+id/btn_crop"
            android:text="@string/image_span_draw" />

        <RadioGroup
            android:id="@+id/rg_align"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@id/btn_crop">

            <RadioButton
                android:id="@+id/rb_align_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/image_span_align_bottom" />

            <RadioButton
                android:id="@+id/rb_align_baseline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/image_span_align_baseline" />

            <RadioButton
                android:id="@+id/rb_align_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/image_span_align_center" />

        </RadioGroup>

    </RelativeLayout>

</ScrollView>