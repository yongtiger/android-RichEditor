<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageView">
        <item name="android:layout_width">@dimen/image_view_size</item>
        <item name="android:layout_height">@dimen/image_view_size</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/image_view_size</item>
        <item name="android:paddingLeft">@dimen/text_view_padding</item>
        <item name="android:paddingRight">@dimen/text_view_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/selector_view</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/shape_text_view</item>
    </style>
</resources>